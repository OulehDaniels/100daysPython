import random

input_user = input("rock(1), paper(2) or scissors(3)?\n")
Bot = random.randint(0, 2)

if int(input_user) == int(Bot):
  print("It's a Draw.")
if int(input_user) - int(Bot) == 1 or int(input_user) - int(Bot) == -2:
  print("You won.")
if int(input_user) - int(Bot) == -1 or int(input_user) - int(Bot) == 2:
  print("You lost.")

if int(Bot) == 0:
  print("The bot got Scissors.")
if int(Bot) == 1:
  print("The bot got Rock.")
if int(Bot) == 2:
  print("The bot got Paper.")
